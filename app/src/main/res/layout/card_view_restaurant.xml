<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/restaurant_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="20dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="10dp"
    >
    <!-- app:cardCornerRadius="20dp" -->
    <!--android:elevation="100dp"
    app:cardCornerRadius="10dp"
     app:cardUseCompatPadding="true"
     android:layout_marginBottom="16dp"
    app:cardElevation="100dp" -->

    <RelativeLayout
        android:id="@+id/restaurant_card_layout"
        android:layout_width="match_parent"
        android:layout_height="224dp">

    <ImageView
        android:id="@+id/restaurant_image"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/bottm_card_row"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sample text"
                android:paddingLeft="16dp"
                android:layout_alignParentLeft="true"
                android:textColor="#000000"
                android:fontFamily="@font/avenir"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/restaurant_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingRight="16dp"
                android:text="sample distance"
                android:textColor="#000000"
                android:fontFamily="@font/avenir"
                android:layout_alignParentRight="true"
                android:textSize="12sp"/>
        </RelativeLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/bottm_card_row"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/restaurant_emojis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="emoji space"
                    android:paddingLeft="16dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="#000000"
                    android:fontFamily="@font/avenir"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/restaurant_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:text="$$$"
                    android:textColor="#000000"
                    android:fontFamily="@font/avenir"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
