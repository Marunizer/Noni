<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model3D.view.ModelActivity">

    <FrameLayout
        android:id="@+id/modelFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </FrameLayout>

    <TextView
        android:id="@+id/store_name"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:text="Restaurant Name"
        android:fontFamily="@font/avenir"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="@color/cardview_light_background"
        android:maxLines="2"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir"
        android:layout_centerHorizontal="true"
        android:text="item name"
        android:gravity="center"
        android:layout_below="@id/store_name"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/item_cost"
        android:layout_width="190dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir"
        android:text="$$$"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_text"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp" />

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/AR_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/cast_album_art_placeholder"
        app:sriv_border_color="#F29AB2"
        app:sriv_border_width="2dp"
        app:sriv_oval="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="12dp"
        android:onClick="loadMode"
        />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/backButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:onClick="onBackPress"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_group_expand_00"
            android:rotation="90"
            app:sriv_border_color="#F29AB2"
            app:sriv_border_width="2dp"
            app:sriv_oval="true" />

        <!--<TextView-->
            <!--android:id="@+id/title_text"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:fontFamily="@font/avenir"-->
            <!--android:gravity="center"-->
            <!--android:text="item name"-->
            <!--android:textColor="@color/cardview_light_background"-->
            <!--android:textSize="36sp" />-->

        <!--<TextView-->
            <!--android:id="@+id/item_cost"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:fontFamily="@font/avenir"-->
            <!--android:text="$$$"-->
            <!--android:textColor="@color/cardview_light_background"-->
            <!--android:textSize="36sp" />-->
    </LinearLayout>


    <TextView
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Category Name"
        android:fontFamily="@font/avenir"
        android:layout_centerHorizontal="true"
        android:textColor="@color/cardview_light_background"
        android:maxLines="1"
        android:layout_marginLeft="12dp"
        android:layout_above="@id/recycler_layout"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/recycler_layout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/model_recycler_view"
            android:scrollbars="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

